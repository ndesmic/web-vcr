{
  "name": "web-vcr",
  "version": "1.0",
  "description": "Save Videos",
  "manifest_version": 3,
  "content_scripts": [
   {
     "matches": ["*://*/*"],
     "css": ["css/styles.css"],
     "js": [
       "js/video-tools.js",
       "js/content-script.js"
      ]
   }
  ],
  "action" : {
    "default_icon": "img/icon-32.png",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "256": "img/icon.png",
    "32": "img/icon-32.png"
  }
}